<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tango Puzzle"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Streak and Score display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        
        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ Streak: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF5722"/>

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="right"/>
    </LinearLayout>

    <!-- Puzzle Grid -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="6"
                android:rowCount="6"
                android:padding="8dp"
                android:background="#FFFFFF" />
                
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Game controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnCheckSolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Solution"
            android:backgroundTint="#4CAF50"/>

        <Button
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Game rules -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to play"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Fill the grid so that each cell contains either a â˜€ or a â˜¾"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ No more than 2 â˜€ or â˜¾ may be next to each other, either vertically or horizontally"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Each row (and column) must contain the same number of â˜€ and â˜¾"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Cells separated by an = sign must be of the same type"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
                
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Cells separated by a Ã— sign must be of the opposite type"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
